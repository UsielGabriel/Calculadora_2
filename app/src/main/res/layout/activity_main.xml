<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fondoanimado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color_animado"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:background="#FFFFFF"
        android:padding="-10dp"
        android:text="7"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="0dp"
        app:layout_constraintHeight_percent=".12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:background="#FFFFFF"
        android:padding="-10dp"
        android:text="9"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="0dp"
        app:layout_constraintHeight_percent=".12"
        app:layout_constraintStart_toEndOf="@+id/btn8"
        app:layout_constraintTop_toTopOf="@+id/btn8"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/btnmul"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:background="#FFFFFF"
        android:padding="-10dp"
        android:text="x"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#C8C8C8"
        app:cornerRadius="0dp"
        app:layout_constraintHeight_percent=".12"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintTop_toTopOf="@+id/btn9"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:background="#FFFFFF"
        android:padding="-10dp"
        android:text="8"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="0dp"
        app:layout_constraintHeight_percent=".12"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintTop_toTopOf="@+id/btn7"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:background="#FFFFFF"
        android:padding="-10dp"
        android:text="4"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="0dp"
        app:layout_constraintHeight_percent=".12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn7"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:background="#FFFFFF"
        android:padding="-10dp"
        android:text="5"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="0dp"
        app:layout_constraintHeight_percent=".12"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintTop_toTopOf="@+id/btn4"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:background="#FFFFFF"
        android:padding="-10dp"
        android:text="6"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="0dp"
        app:layout_constraintHeight_percent=".12"
        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintTop_toTopOf="@+id/btn5"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/btnmen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:background="#FFFFFF"
        android:padding="-10dp"
        android:text="-"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#C8C8C8"
        app:cornerRadius="0dp"
        app:layout_constraintHeight_percent=".12"
        app:layout_constraintStart_toEndOf="@+id/btn6"
        app:layout_constraintTop_toTopOf="@+id/btn6"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:background="#FFFFFF"
        android:padding="-10dp"
        android:text="1"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="0dp"
        app:layout_constraintHeight_percent=".12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn4"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:background="#FFFFFF"
        android:padding="-10dp"
        android:text="2"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="0dp"
        app:layout_constraintHeight_percent=".12"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintTop_toTopOf="@+id/btn1"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/btndiv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:background="#FFFFFF"
        android:text="/"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#C8C8C8"
        app:cornerRadius="0dp"
        app:layout_constraintHeight_percent=".12"
        app:layout_constraintStart_toEndOf="@+id/btnC"
        app:layout_constraintTop_toTopOf="@+id/btnC"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/delete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:background="#FFFFFF"
        android:padding="-10dp"
        android:text="DELETE"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#C8C8C8"
        app:cornerRadius="0dp"
        app:layout_constraintHeight_percent=".12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtoperacion"
        app:layout_constraintWidth_percent=".375" />

    <Button
        android:id="@+id/btnC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:background="#FFFFFF"
        android:padding="-10dp"
        android:text="C"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#C8C8C8"
        app:cornerRadius="0dp"
        app:layout_constraintHeight_percent=".12"
        app:layout_constraintStart_toEndOf="@+id/delete"
        app:layout_constraintTop_toTopOf="@+id/delete"
        app:layout_constraintWidth_percent=".375" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_margin="0dp"
        android:background="#FFFFFF"
        android:text="3"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="0dp"
        app:layout_constraintHeight_percent=".12"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintTop_toTopOf="@+id/btn2"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/btnsum"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:background="#FFFFFF"
        android:padding="-10dp"
        android:text="+"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#C8C8C8"
        app:cornerRadius="0dp"
        app:layout_constraintHeight_percent=".12"
        app:layout_constraintStart_toEndOf="@+id/btn3"
        app:layout_constraintTop_toTopOf="@+id/btn3"
        app:layout_constraintWidth_percent=".25" />


    <Button
        android:id="@+id/btn0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="#FFFFFF"
        android:padding="-10dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent=".12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        app:layout_constraintWidth_percent=".50" />

    <Button
        android:id="@+id/btnpunto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:background="#FFFFFF"
        android:padding="-10dp"
        android:text="."
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="0dp"
        app:layout_constraintHeight_percent=".12"
        app:layout_constraintStart_toEndOf="@+id/btn0"
        app:layout_constraintTop_toTopOf="@+id/btn0"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/btnigual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:background="@android:color/transparent"
        android:padding="-10dp"
        android:text="="
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:backgroundTint="@android:color/transparent"
        app:cornerRadius="0dp"
        app:layout_constraintHeight_percent=".12"
        app:layout_constraintStart_toEndOf="@+id/btnpunto"
        app:layout_constraintTop_toTopOf="@+id/btnpunto"
        app:layout_constraintWidth_percent=".25" />

    <EditText
        android:id="@+id/txtoperacion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:gravity="right|center"
        android:textColor="#FFFFFF"
        android:textIsSelectable="true"
        android:textSize="40sp"
        android:textStyle="bold"
        app:autoSizeTextType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>